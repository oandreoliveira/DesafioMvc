@model ReceitasMvc.DTO.ReceitaDTO



<h3>Nova Receita</h3>
<hr>
<form class="form-horizontal" asp-controller="Receitas" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">

    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome da receita">
    <span asp-validation-for="Nome"></span><br>

    <label asp-for="Foto">Link da foto</label>
    <input type="text" asp-for="Foto" class="form-control" placeholder="Escolha um link para foto e cole neste campo">
    <span asp-validation-for="Foto"></span><br>

    <label asp-for="CategoriaID">Categoria</label>
    <select class="form-control" asp-for="CategoriaID"
        asp-items='@(new SelectList(@ViewBag.Categorias,"Id","Nome"))'></select><br>

    <label asp-for="ModoDePreparo">Modo de Preparo</label>
    <input class="form-control" asp-for="ModoDePreparo" placeholder="Escreva passo a passo a receita detalhadamente">
    <span asp-validation-for="ModoDePreparo"></span><br>

    <label asp-for="TempoDePreparo">Tempo de Preparo</label>
    <input class="form-control" asp-for="TempoDePreparo" placeholder="Informe quantos minutos demora a receita">
    <span asp-validation-for="TempoDePreparo"></span><br>

    <label asp-for="Porcao">Porção</label>
    <input class="form-control" asp-for="Porcao" placeholder="Informe quantidade de porções que rende a receita?">
    <span asp-validation-for="Porcao"></span><br>


    <button class="btn btn-success">Inserir Insumos</button>
</form>