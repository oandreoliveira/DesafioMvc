@model IEnumerable<ReceitasMvc.Models.Receita>
@{
    Layout = "_Layout";
}
<script>
    $(document).ready(function () {
        $('#receitasUser').DataTable({
            "info": false,
            "lengthMenu": false,
            "zeroRecords": false,
            "infoEmpty": false,
            "language": {
                "lengthMenu": "Exibindo _MENU_ registros por página",
                "zeroRecords": "Desculpe, nada foi encontrado",
                "info": "Exibindo Página _PAGE_ de _PAGES_",
                "infoEmpty": "Nenhum registro disponível",
                "search": "Buscar ",
                "paginate": {
                    "first": "Primeiro",
                    "last": "Último",
                    "next": " Próximo",
                    "previous": "Anterior "
                }
            }

        });

    });
</script>

<style>


</style>
<h2>Nossas Receitas</h2>
<hr />
<table id="receitasUser" class="table table-striped table-bordered">
    <thead>
        <tr>

            <th>Imagem</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Detalhar</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var receita in Model)
        {
            <tr>
                <td>
                    <center><img src="@receita.Foto" width=100 height=70>
                </td>
                <td>@receita.Nome</td>
                <td>@receita.Categoria.Nome</td>
                <td><a class="btn btn-info" href="/Home/ReceitaFinalUser/@receita.Id">Visualizar</a>
                </td>
            </tr>

        }
    </tbody>
</table>
