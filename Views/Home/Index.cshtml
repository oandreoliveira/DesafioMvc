@model List<ReceitasMvc.Models.InsumoReceita>
@{
    Layout = "_Layout";
}



<style>
    .msg1 {

        justify-content: center;
        color: #033c73;
        font: italic bold 75px arial, sans-serif;

    }
</style>

<center>
    <div class="msg1">

        <head> Nossa<img src="Imagens/LogoReceita.png" width="250" height="250">Receita</head>
    </div>

</center>

<style>
    @*.receitasCards{width:100%;display:flex;flex-direction:row;justify-content:space-around;align-items:flex-start;}*@.receitasCards {

        display: grid;
        grid-gap: 30px;
        padding: 30px;
        justify-content: space-around;
        justify-items: center;
        grid-template-columns: 100px 100px 100px;
    }

    .card {
        border-radius: 50px 50px;

    }
</style>
<div class="receitasCards">

    @foreach (var receita in @Model.GroupBy(r => r.Receita))
    {


        <div class='row'>
            <div class='col-3'>
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="@receita.Key.Foto" alt="Imagem de capa do card" height=150>
                    <div class="card-body">
                        <center>
                            <h5 class="card-title">@receita.Key.Nome</h5>
                            <a class="btn btn-info" href="/Home/ReceitaFinalUser/@receita.Key.Id">Visualizar receita
                                Completa</a>
                    </div>
                </div>
            </div>
        </div>

    }

</div>
